<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-dark">Nova Categoria</button></a>

{{#each categories}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small>
            <hr>
            <a href="/admin/categories/edit/{{_id}}" class=""><span class="material-icons">create</span></a>
            <a href="/admin/categories/delete/{{_id}}" class=""><span class="material-icons">delete</span></a>
        </div>
    </div>
{{else}}
    <h4 class="text-center mt-3">Ainda não existe nunhuma categoria!</h4>
{{/each}}

