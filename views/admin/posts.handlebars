<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-dark">Nova postagem</button></a>

{{#each posts}}
    <div class="card mt-3">
        <div class="card-body">

            <h4>{{title}}</h4>
            <h6 class="mt-3">Resumo: </h6>
            <p>{{description}}</p>
            <h6 class="mt-3">Conteudo: </h6>
            <p>{{content}}</p>
            <small><strong>Slug: </strong>{{slug}}</small><br>
            <small><strong>Categoria: </strong> {{category.name}}</small><br>
            <small><strong>Data de criação: </strong>{{date}}</small>
            <hr>
            <a href="/admin/posts/edit/{{_id}}" class=""><span class="material-icons">create</span></a>
            <a href="/admin/post/delete/{{_id}}" class=""><span class="material-icons">delete</span></a>
        </div>
    </div>
{{else}}
    <h4 class="text-center mt-3">Ainda não existe Postes!</h4>
{{/each}}
